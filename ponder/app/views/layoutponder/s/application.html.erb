<!DOCTYPE html>
<html>
<head>
  <title>Ponder</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav>
    <ul>
      <% if @current_user.present? %>
        <li>
          Oh Hai <%= @current_user.full_name %>. <%= link_to "Sign Out", sign_out_path, method: :post %>
        </li>
      <% else %>
        <li>
          Oh hai stranger. <%= link_to "Sign in?", sign_in_path %>
        </li>
      <% end %>
      <li><%= link_to 'Home', root_path %></li>
      <li><%= link_to 'About', about_path %></li>
      <li><%= link_to 'Contact', contact_path %></li>
      <li><%= link_to 'Secrets', secrets_path %></li>
      <li><%= pluralize @deep_thoughts.count, 'Thought' %> in system</li>
    </ul>
  </nav>

  <% if notice %>
    <p class="notice"><%= notice %></p>
  <% end %>

  <% if alert %>
    <p class="alert"><%= alert %></p>
  <% end %>


<%= yield %>

</body>
</html>
